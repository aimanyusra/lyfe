<!DOCTYPE html>
<html>
  <head>
    <title>Lyfe</title>
    <%= csrf_meta_tags %>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> 

    <link rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css">
    <!-- Jquery js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet"> -->
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Arvo:400,700' rel='stylesheet' type='text/css'>
    <script src="js/modernizr-2.8.3.min.js"></script> 
    <!-- Bootstrap js -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://apis.google.com/js/platform.js" async defer></script>

  </head>

  <body>
  <% unless current_page?(root_path) %>
      <!-- NavBar-->
    <nav class="navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
  <!--        <button type="button" class="navbar-toggle fa fa-bars" aria-hidden="true"" data-toggle="collapse" data-target=".navbar-ex1-collapse"> -->
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#home">Lyfe</a>
        </div>

        <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
          <ul class="nav navbar-nav">         
            <li class="menuItem"><a href="#acts">Acts</a></li>
            <li class="menuItem"><a href="#styles">Styles</a></li>
            <li class="menuItem"><a href="#screen">Screenshot</a></li>
            <li class="menuItem"><a href="#credits">Credits</a></li>
            <% if signed_in? -%>
              <li class="menuItem"><%= link_to current_user.first_name, user_path(current_user.id) %></li>
              <li class="menuItem"><%= link_to "Log Out", sign_out_path, method: :delete %></li>
            <% else -%>
              <li class="menuItem"><%= link_to "Log In", sign_in_path %></li>
            <% end %>
          </ul>
        </div>     
      </div>
    </nav> 
  <% end %>

  <%# if signed_in? %>
    <%#= link_to 'edit', edit_user_path(current_user) %>
  <%# end %>
  <br>
    <%= link_to 'home', root_path %>
    <%= link_to 'events', events_path %>


    <%= yield %>
      <script type="text/javascript">
    jQuery(function($) {
    $(document).ready( function() {
      $('.navbar-default').stickUp();
    });
    });
  
  </script>
  <!-- Smoothscroll -->
  <script>
   new WOW().init();
  </script>
  </body>
</html>
