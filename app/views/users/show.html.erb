<h1><%= image_tag @user.avatar.thumb, class:"img-circle" %> <%= @user.first_name + ' ' + @user.last_name %></h1>
<br>


<%= link_to 'Make an Act', new_event_path %>
<h1><%= @user.first_name %> Acts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Time</th>
      <th>Age limit</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.status %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.location %></td>
        <td><%= event.time %></td>
        <td><%= event.age_limit %></td>
        <td><%= event.price %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <h1><%= @user.first_name %> joined the following Acts</h1>
    <% @eventusers.each do |x| %>
    	<%= p Event.find(x.event_id).title %>
  	<br>
  	<%end%>


<h1><%= @user.first_name %>'s favorite event </h1>
<% @fav_event.each do |x|%> 
<%= p Event.find(x.objectid).title %>
<%end%>

<h1><%= @user.first_name %>'s favorite style </h1>
<% @fav_style.each do |x|%> 
<%= p Style.find(x.objectid).name %>
<%end%>